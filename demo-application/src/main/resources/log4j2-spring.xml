<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
        <Property name="LOG_LEVEL_PATTERN">%5p</Property>
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
        <Property name="CONSOLE_LOG_PATTERN">%clr{%d{${LOG_DATEFORMAT_PATTERN}}}{faint} %clr{${LOG_LEVEL_PATTERN}} %clr{%pid}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
        <Property name="FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} %pid --- [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${sys:CONSOLE_LOG_PATTERN}" />
        </Console>
        <!-- ERROR -->
        <RollingFile name="ERROR" fileName="${sys:LOG_PATH}/${sys:LOG_FILE}/error.log" filePattern="${sys:LOG_PATH}/${sys:LOG_FILE}/error-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>${sys:FILE_LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${sys:LOG_PATH}">
                    <IfFileName glob="*/error-log-*.log" />
                    <IfLastModified age="60d" />
                </Delete>
            </DefaultRolloverStrategy>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
        <!-- WARN -->
        <RollingFile name="WARN" fileName="${sys:LOG_PATH}/${sys:LOG_FILE}/warn.log" filePattern="${sys:LOG_PATH}/${sys:LOG_FILE}/warn-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>${sys:FILE_LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${sys:LOG_PATH}">
                    <IfFileName glob="*/warn-log-*.log" />
                    <IfLastModified age="60d" />
                </Delete>
            </DefaultRolloverStrategy>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
        <!-- INFO -->
        <RollingFile name="INFO" fileName="${sys:LOG_PATH}/${sys:LOG_FILE}/info.log" filePattern="${sys:LOG_PATH}/${sys:LOG_FILE}/info-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>${sys:FILE_LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${sys:LOG_PATH}">
                    <IfFileName glob="*/info-log-*.log" />
                    <IfLastModified age="60d" />
                </Delete>
            </DefaultRolloverStrategy>
            <Filters>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
        <!-- DEBUG -->
        <RollingFile name="DEBUG" fileName="${sys:LOG_PATH}/${sys:LOG_FILE}/debug.log" filePattern="${sys:LOG_PATH}/${sys:LOG_FILE}/debug-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>${sys:FILE_LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${sys:LOG_PATH}">
                    <IfFileName glob="*/debug-log-*.log" />
                    <IfLastModified age="60d" />
                </Delete>
            </DefaultRolloverStrategy>
            <Filters>
                <ThresholdFilter level="INFO" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
        <!-- TRACE -->
        <RollingFile name="TRACE" fileName="${sys:LOG_PATH}/${sys:LOG_FILE}/trace.log" filePattern="${sys:LOG_PATH}/${sys:LOG_FILE}/trace-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>${sys:FILE_LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${sys:LOG_PATH}">
                    <IfFileName glob="*/trace-log-*.log" />
                    <IfLastModified age="60d" />
                </Delete>
            </DefaultRolloverStrategy>
            <Filters>
                <ThresholdFilter level="DEBUG" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="org.apache.catalina.startup.DigesterFactory" level="error" />
        <Logger name="org.apache.catalina.util.LifecycleBase" level="error" />
        <Logger name="org.apache.coyote.http11.Http11NioProtocol" level="warn" />
        <Logger name="org.apache.sshd.common.util.SecurityUtils" level="warn"/>
        <Logger name="org.apache.tomcat.util.net.NioSelectorPool" level="warn" />
        <Logger name="org.eclipse.jetty.util.component.AbstractLifeCycle" level="error" />
        <Logger name="org.hibernate.validator.internal.util.Version" level="warn" />
        <Logger name="org.springframework.boot.actuate.endpoint.jmx" level="warn"/>
        <logger name="java.sql.PreparedStatement" level="INFO" />
        <logger name="java.sql.Connection" level="INFO" />
        <logger name="java.sql.Statement" level="INFO" />
        <logger name="com.ibatis" level="INFO" />
        <logger name="com.ibatis.common.jdbc.SimpleDataSource" level="INFO" />
        <logger name="com.ibatis.common.jdbc.ScriptRunner" level="INFO"/>
        <logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="INFO" />
        <AsyncLogger   name="com.example" level="TRACE" additivity="false" includeLocation="true">
            <appender-ref ref="ERROR" />
            <appender-ref ref="WARN" />
            <appender-ref ref="INFO" />
            <appender-ref ref="DEBUG" />
            <appender-ref ref="TRACE" />
        </AsyncLogger >
        <!-- root级别 -->
        <Root level="ERROR" includeLocation="true">
            <!-- 文件输出 -->
            <appender-ref ref="AsyncConsole" />
        </Root>
    </Loggers>
</Configuration>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.leyoujia.coa.zc</groupId>
  <artifactId>coa-zc</artifactId>
  <version>${revision}</version>
  <packaging>pom</packaging>

  <url>https://172.16.4.233/svn/cloud-oa/zc/coa-zc</url>
  <description>资产线所有业务</description>

  <modules>
    <module>coa-zc-_parent</module>
    <module>coa-zc-client</module>
    <module>coa-zc-common</module>
    <module>coa-zc-core</module>
    <module>coa-zc-mall</module>
  </modules>

  <distributionManagement>
    <repository>
      <!-- 这里的ID要和setting的id一致 -->
      <id>releases</id>
      <url>http://172.16.5.251:8081/nexus/content/repositories/jjsrespo/</url>
    </repository>
    <!--这是打成快照版本的配置，如果不用这个snapshotRepository标签，打包失败，会报权限问题 -->
    <snapshotRepository>
      <id>snapshots</id>
      <url>http://172.16.5.251:8081/nexus/content/repositories/Snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <properties>
    <revision>1.0.5</revision>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <java.version>1.8</java.version>
    <resource.delimiter>@</resource.delimiter>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>${java.version}</maven.compiler.target>
  </properties>

  <build>
    <!-- resources 处理 来自 spring boot starter parent -->
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${basedir}/src/main/resources</directory>
        <includes>
          <include>**/application*.yml</include>
          <include>**/application*.yaml</include>
          <include>**/application*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
        <excludes>
          <exclude>**/application*.yml</exclude>
          <exclude>**/application*.yaml</exclude>
          <exclude>**/application*.properties</exclude>
        </excludes>
      </resource>
      <!-- 针对mybatis的文件复制 -->
      <resource>
        <filtering>false</filtering>
        <directory>${basedir}/src/main/java</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
      </resource>
      <!-- 针对运行脚本 -->
      <resource>
        <filtering>false</filtering>
        <directory>${basedir}/bin</directory>
        <targetPath>${basedir}/target</targetPath>
      </resource>
    </resources>
    <!-- 定义一些plgin -->
    <plugins>
      <!-- 打包发布pom.xml处理 -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>flatten-maven-plugin</artifactId>
        <configuration>
          <updatePomFile>true</updatePomFile>
          <flattenMode>oss</flattenMode>
        </configuration>
        <executions>
          <execution>
            <id>flatten</id>
            <phase>process-resources</phase>
            <goals>
              <goal>flatten</goal>
            </goals>
          </execution>
          <execution>
            <id>flatten.clean</id>
            <phase>clean</phase>
            <goals>
              <goal>clean</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- 生成sources源码包的插件 -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- javac 版本 -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <parameters>true</parameters>
        </configuration>
      </plugin>
      <!-- resources 插件 -->
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <configuration>
          <delimiters>
            <delimiter>${resource.delimiter}</delimiter>
          </delimiters>
          <useDefaultDelimiters>false</useDefaultDelimiters>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
